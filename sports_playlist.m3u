import requests

# ১. নিজের চ্যানেলের লিঙ্ক (না থাকলে নিচের টুকু যেমন আছে থাক)
MY_CHANNELS = "#EXTM3U\n"

# ২. অন্য প্লেলিস্টের লিঙ্ক (এখানে আপনার পছন্দের লিঙ্কটি দিন)
OTHER_PLAYLIST_URLS = [
    "https://da.gd/YWCS05"
]

def update_playlist():
    final_content = MY_CHANNELS
    for url in OTHER_PLAYLIST_URLS:
        try:
            r = requests.get(url, timeout=10)
            if r.status_code == 200:
                # মেইন হেডার বাদ দিয়ে শুধু চ্যানেলগুলো নেওয়া
                data = r.text.replace("#EXTM3U", "").strip()
                final_content += "\n" + data
        except:
            pass
    
    with open("playlist.m3u8", "w", encoding="utf-8") as f:
        f.write(final_content)

if __name__ == "__main__":
    update_playlist()
